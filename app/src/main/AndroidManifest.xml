<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.wme.infbox_android_t04">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/infbox_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Infbox_ab" >
        <activity
            android:name="de.wme.infbox_android_t04.Login"
            android:label="@string/title_infbox" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.wme.infbox_android_t04.Info"
            android:label="@string/title_infbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.wme.infbox_android_t04.Login" />
        </activity>
        <activity
            android:name="de.wme.infbox_android_t04.Register"
            android:label="@string/title_infbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.wme.infbox_android_t04.Login" />
        </activity>
        <activity
            android:name="de.wme.infbox_android_t04.Items"
            android:label="@string/title_infbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.wme.infbox_android_t04.Login" />
        </activity>
        <activity
            android:name="de.wme.infbox_android_t04.Details"
            android:label="@string/title_infbox" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.wme.infbox_android_t04.Items" />
        </activity>
    </application>

</manifest>
